<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/cardview_shadow_start_color"


    >
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/item_image_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/no_image_white"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:paddingRight="5dp"/>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price DT"/>

    </LinearLayout>



    <!-- The rest of your layout remains unchanged -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/increment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_24_w"
                android:background="@drawable/round_button_background"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/decrement_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_24_w"
                android:background="@drawable/round_button_background"/>

            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_outline_24_r" />

        </LinearLayout>
        <TextView
            android:id="@+id/item_total_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Total"
            />

    </LinearLayout>


</LinearLayout>
